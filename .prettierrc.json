{
  "trailingComma": "es5",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": [
        "*.json",
        ".*"
      ],
      "options": {
        "useTabs": false,
        "singleQuote": false
      }
    },
    {
      "files": [
        "*.html"
      ],
      "options": {
        "printWidth": 120,
        "singleQuote": false
      }
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 120,
        "useTabs": false,
        "endOfLine": "crlf"
      }
    }
  ]
}
